{
  "name": "shopping-calculator",
  "version": "1.0.0",
  "description": "This is a Shopping List Calculator Project which aims to test a powerful blend(integration) of React and Electron JS.",
  "main": "public/electron.js",
  "author": "Souleh Shaikh",
  "homepage": "./",
  "license": "MIT",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-prod": "electron .",
    "electron-dev": "yarn run build && electron .",
    "preelectron-pack": "yarn build",
    "electron-pack": "build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "@material-ui/core": "^3.9.3",
    "@material-ui/icons": "^3.0.2",
    "classnames": "^2.2.6",
    "electron": "^5.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.0",
    "typeface-roboto": "^0.0.54",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3",
    "jspdf": "^1.5.3",
    "jspdf-autotable": "^3.1.1"
  },
  "build": {
    "productName": "Shopping List Calculator",
    "files": [
      "build/**/*",
      "!assets"
    ],
    "extraMetadata": {
      "main": "build/electron.js"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "license": "LICENSE",
      "shortcutName": "Shopping List Calculator",
      "deleteAppDataOnUninstall": "true"
    },
    "win": {
      "asar": true,
      "publish": null,
      "target": [
        "zip",
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/main_icon.ico"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
