{
  "name": "shopping-calculator",
  "version": "4.0.0",
  "description": "This is a Shopping List Calculator Project which aims to test a powerful blend(integration) of React and Electron JS.",
  "main": "build/main.js",
  "author": "Souleh Shaikh",
  "homepage": "./",
  "license": "MIT",
  "scripts": {
    "dev": "react-scripts build && grunt && electron build\\main.js",
    "pack": "react-scripts build && grunt && build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@material-ui/core": "^4.0.2",
    "@material-ui/icons": "^4.0.1",
    "classnames": "^2.2.6",
    "electron": "^5.0.2",
    "grunt": "^1.0.4",
    "grunt-babel": "^8.0.0",
    "grunt-cli": "^1.3.2",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-uglify": "^4.0.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^3.0.1",
    "typeface-roboto": "^0.0.54",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3",
    "jspdf": "^1.5.3",
    "jspdf-autotable": "^3.1.1"
  },
  "build": {
    "productName": "Shopping List Calculator",
    "files": [
      "build/**/*",
      "!assets"
    ],
    "extraMetadata": {
      "main": "build/main.js"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "license": "LICENSE",
      "shortcutName": "Shopping List Calculator",
      "deleteAppDataOnUninstall": "true"
    },
    "win": {
      "asar": true,
      "publish": null,
      "target": [
        "zip",
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/main_icon.ico"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
